<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ttu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="TAITA TAVETA UNIVERSITY"
        android:textSize="29sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/i_care_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ttu_id"
        android:layout_centerHorizontal="true"
        android:text="I care about TTU"
        android:textSize="29sp"
        android:textStyle="bold" />

    <EditText
        android:hint="Enter reg number"
        android:id="@+id/reg_no_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/i_care_textview"
        android:layout_marginTop="36dp" />
    <EditText
        android:hint="Enter password"
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reg_no_edit_text"
        android:layout_marginTop="36dp"
        android:inputType="numberPassword"/>

    <LinearLayout
        android:id="@+id/button_linear_layout"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/password_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/staff_option_button"
            android:layout_marginLeft="170dp"
            android:text="STAFF LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/forgot_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textStyle="italic"
        android:text="Forgot password ?" />

    <TextView
        android:layout_below="@+id/forgot_password_text_view"
        android:text="The home of ideas"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>