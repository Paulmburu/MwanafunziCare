<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/staff_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="126dp"
        android:text="Staff login"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/username_text_view"
        android:layout_below="@+id/staff_login"
        android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText

        android:id="@+id/staff_password_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Password" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@+id/staff_password_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="LOGIN"
            android:id="@+id/button_staff_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="130dp"
            android:text="Forgot Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>









</RelativeLayout>